@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Walker Profile</h1>

<div>
    <section class="container" style="margin-bottom:100px">
        <img
          style="width:100px;float:left;margin-right:20px"
          src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Font_Awesome_5_regular_user-circle.svg"
        />
        <div>
          <label class="font-weight-bold">Name:</label>
          <span>@Model.Walker.Name</span>
        </div>
        <div>
          <label class="font-weight-bold">Neighborhood:</label>
          <span>@Model.Walker.Neighborhood.Name</span>
        </div>
     </section>
</div>
<div class="container">
       <div class="row">
           <div class="col-lg">
               <div>
                   <h1>Recent Walks</h1>
                   <table class="table">
                       <thead>
                           <tr>
                               <th>
                                   Date
                               </th>
                               <th>
                                   Client
                               </th>
                               <th>
                                   Duration
                               </th>
                           </tr>
                       </thead>
                       <tbody>
                    @foreach (var item in Model.Walks)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Client)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Duration) Minutes
                            </td>
                        </tr>
                    }
                </tbody>
                   </table>
               </div>
            </div>
            <div class="col-lg">
                 <h1>Total Walk Time:</h1>
            </div>
        </div>
       </div>



